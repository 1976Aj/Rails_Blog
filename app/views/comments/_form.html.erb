
<%= form_with(model: [ @article, @article.comments.build ]) do |form| %>

  <p>
    <%= form.text_field :commenter, :placeholder => 'Your Name...' %>
  </p>

  <p>
    <%= form.text_area :body, :placeholder => 'Your Comment...' %>
  </p>
  <p>
    <%= form.submit 'Submit', class: "btn btn-success" %>
  </p>
<% end %>
